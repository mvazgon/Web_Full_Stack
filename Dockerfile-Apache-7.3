RUN apt update && \
	apt upgrade -y && \
	apt install ca-certificates apt-transport-https locales wget gnupg2 gnupg1 -y && \
	localedef -i es_ES -c -f UTF-8 -A /usr/share/locale/locale.alias es_ES.UTF-8
